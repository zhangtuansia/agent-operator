{
  "name": "Default Permissions",
  "description": "Default read-only bash and MCP patterns for Explore mode. Edit this file to customize which commands are allowed without prompting.",

  "allowedBashPatterns": [
    { "pattern": "^ls\\b", "comment": "List directory contents" },
    { "pattern": "^ll\\b", "comment": "Long listing (ls -l alias)" },
    { "pattern": "^la\\b", "comment": "List all including hidden (ls -la alias)" },
    { "pattern": "^tree\\b", "comment": "Display directory tree structure" },
    { "pattern": "^file\\b", "comment": "Determine file type" },
    { "pattern": "^stat\\b", "comment": "Display file status and metadata" },
    { "pattern": "^du\\b", "comment": "Estimate file/directory disk usage" },
    { "pattern": "^df\\b", "comment": "Report filesystem disk space usage" },
    { "pattern": "^wc\\b", "comment": "Count lines, words, bytes in files" },
    { "pattern": "^head\\b", "comment": "Output first part of files" },
    { "pattern": "^tail\\b", "comment": "Output last part of files" },
    { "pattern": "^cat\\b", "comment": "Concatenate and display file contents" },
    { "pattern": "^less\\b", "comment": "View file contents with paging" },
    { "pattern": "^more\\b", "comment": "View file contents with paging" },
    { "pattern": "^bat\\b", "comment": "Cat clone with syntax highlighting" },

    { "pattern": "^find\\b", "comment": "Search for files in directory hierarchy" },
    { "pattern": "^locate\\b", "comment": "Find files by name using database" },
    { "pattern": "^which\\b", "comment": "Locate a command" },
    { "pattern": "^whereis\\b", "comment": "Locate binary, source, manual for command" },
    { "pattern": "^type\\b", "comment": "Display information about command type" },
    { "pattern": "^grep\\b", "comment": "Search file contents with patterns" },
    { "pattern": "^rg\\b", "comment": "Ripgrep - fast recursive search" },
    { "pattern": "^ag\\b", "comment": "The Silver Searcher - fast code search" },
    { "pattern": "^ack\\b", "comment": "Ack - grep-like tool for programmers" },
    { "pattern": "^fd\\b", "comment": "Fast and user-friendly find alternative" },
    { "pattern": "^fzf\\b", "comment": "Fuzzy finder for files and commands" },

    { "pattern": "^git\\s+((-[A-Za-z]|--[a-z][-a-z]*)(\\s+[^\\s-][^\\s]*)?\\s+)*(status|log|diff|show|branch|tag|remote|stash\\s+list|describe|rev-parse|config\\s+--get|config\\s+-l|ls-files|ls-tree|shortlog|blame|annotate|reflog|cherry|whatchanged|ls-remote|history)\\b", "comment": "Git read-only operations (supports flags like -C, --no-pager before subcommand)" },

    { "pattern": "^gh\\s+(pr|issue|repo|release|run|workflow|gist|project)\\s+(view|list|status|diff|checks|comments)\\b", "comment": "GitHub CLI read operations: view PRs, issues, releases" },
    { "pattern": "^gh\\s+api\\b.*--method\\s+GET\\b", "comment": "GitHub API with explicit GET method" },
    { "pattern": "^gh\\s+api\\b(?!.*--method)", "comment": "GitHub API without method (defaults to GET)" },
    { "pattern": "^gh\\s+auth\\s+status\\b", "comment": "Check GitHub authentication status" },
    { "pattern": "^gh\\s+config\\s+(get|list)\\b", "comment": "Read GitHub CLI configuration" },

    { "pattern": "^npm\\s+(ls|list|view|info|show|outdated|audit|search|explain|why|config\\s+get|config\\s+list)\\b", "comment": "npm read operations: list packages, view info, check outdated" },
    { "pattern": "^yarn\\s+(list|info|why|outdated|audit)\\b", "comment": "Yarn read operations: list packages, check outdated" },
    { "pattern": "^pnpm\\s+(list|ls|why|outdated|audit)\\b", "comment": "pnpm read operations: list packages, check outdated" },
    { "pattern": "^bun\\s+(pm\\s+ls)\\b", "comment": "Bun package manager list" },
    { "pattern": "^pip\\s+(list|show|freeze|check)\\b", "comment": "pip read operations: list packages, show info" },
    { "pattern": "^pip3\\s+(list|show|freeze|check)\\b", "comment": "pip3 read operations: list packages, show info" },
    { "pattern": "^cargo\\s+(tree|metadata|pkgid|verify-project)\\b", "comment": "Cargo read operations: dependency tree, metadata" },
    { "pattern": "^go\\s+(list|mod\\s+graph|mod\\s+why|version)\\b", "comment": "Go read operations: list modules, dependency graph" },
    { "pattern": "^composer\\s+(show|info|outdated|licenses)\\b", "comment": "Composer read operations: show packages, licenses" },
    { "pattern": "^gem\\s+(list|info|dependency|environment)\\b", "comment": "RubyGems read operations: list gems, show info" },
    { "pattern": "^bundle\\s+(list|info|outdated)\\b", "comment": "Bundler read operations: list gems, check outdated" },

    { "pattern": "^cd\\b", "comment": "Change directory (affects shell session only)" },
    { "pattern": "^pwd\\b", "comment": "Print current working directory" },
    { "pattern": "^whoami\\b", "comment": "Print current username" },
    { "pattern": "^id\\b", "comment": "Print user and group IDs" },
    { "pattern": "^groups\\b", "comment": "Print group memberships" },
    { "pattern": "^uname\\b", "comment": "Print system information" },
    { "pattern": "^hostname\\b", "comment": "Print system hostname" },
    { "pattern": "^date\\b", "comment": "Print current date and time" },
    { "pattern": "^uptime\\b", "comment": "Print system uptime and load" },
    { "pattern": "^env$", "comment": "Print all environment variables (bare command only, not env <cmd>)" },
    { "pattern": "^printenv\\b", "comment": "Print environment variables" },
    { "pattern": "^echo\\s+\\$", "comment": "Echo environment variable values" },
    { "pattern": "^ps\\b", "comment": "List running processes" },
    { "pattern": "^top\\s+-[lb]", "comment": "Process viewer in batch/list mode only" },
    { "pattern": "^htop\\b", "comment": "Interactive process viewer" },
    { "pattern": "^free\\b", "comment": "Display memory usage" },
    { "pattern": "^vmstat\\b", "comment": "Virtual memory statistics" },
    { "pattern": "^iostat\\b", "comment": "I/O statistics" },
    { "pattern": "^lscpu\\b", "comment": "Display CPU architecture information" },
    { "pattern": "^lsmem\\b", "comment": "Display memory information" },
    { "pattern": "^lsblk\\b", "comment": "List block devices" },
    { "pattern": "^lsusb\\b", "comment": "List USB devices" },
    { "pattern": "^lspci\\b", "comment": "List PCI devices" },

    { "pattern": "^docker\\s+(ps|images|logs|inspect|stats|top|port|diff|history|version|info|system\\s+info|system\\s+df|network\\s+ls|network\\s+inspect|volume\\s+ls|volume\\s+inspect|container\\s+ls|image\\s+ls)\\b", "comment": "Docker read operations: list containers, images, logs, inspect" },
    { "pattern": "^docker-compose\\s+(ps|logs|config|images|top|version)\\b", "comment": "Docker Compose read operations: list services, view logs" },
    { "pattern": "^docker\\s+compose\\s+(ps|logs|config|images|top|version)\\b", "comment": "Docker Compose (v2) read operations" },

    { "pattern": "^kubectl\\s+(get|describe|logs|top|explain|api-resources|api-versions|cluster-info|config\\s+view|config\\s+get-contexts|version)\\b", "comment": "Kubernetes read operations: get resources, describe, view logs" },

    { "pattern": "^sed\\s+-n\\b", "comment": "sed in print-only mode (no editing)" },
    { "pattern": "^sort\\b", "comment": "Sort lines of text files" },
    { "pattern": "^uniq\\b", "comment": "Report or filter repeated lines" },
    { "pattern": "^cut\\b", "comment": "Remove sections from lines" },
    { "pattern": "^tr\\b", "comment": "Translate or delete characters" },
    { "pattern": "^column\\b", "comment": "Columnate lists" },
    { "pattern": "^jq\\b", "comment": "JSON processor" },
    { "pattern": "^yq\\b", "comment": "YAML processor" },
    { "pattern": "^xq\\b", "comment": "XML processor (via yq)" },
    { "pattern": "^xmllint\\b", "comment": "XML linter and formatter" },
    { "pattern": "^json_pp\\b", "comment": "JSON pretty printer" },
    { "pattern": "^python\\s+-m\\s+json\\.tool\\b", "comment": "Python JSON formatter" },

    { "pattern": "^ping\\b", "comment": "Send ICMP echo requests" },
    { "pattern": "^traceroute\\b", "comment": "Trace packet route to host" },
    { "pattern": "^tracepath\\b", "comment": "Trace path to host" },
    { "pattern": "^mtr\\b", "comment": "Network diagnostic tool" },
    { "pattern": "^dig\\b", "comment": "DNS lookup utility" },
    { "pattern": "^nslookup\\b", "comment": "Query DNS servers" },
    { "pattern": "^host\\b", "comment": "DNS lookup utility" },
    { "pattern": "^netstat\\b", "comment": "Network statistics" },
    { "pattern": "^ss\\b", "comment": "Socket statistics" },
    { "pattern": "^ip\\s+(addr|link|route|neigh)\\s*(show)?\\b", "comment": "IP address/link/route information" },
    { "pattern": "^ifconfig\\b", "comment": "Network interface configuration (read)" },

    { "pattern": "^node\\s+(--version|-v)\\b", "comment": "Node.js version" },
    { "pattern": "^npm\\s+(--version|-v)\\b", "comment": "npm version" },
    { "pattern": "^yarn\\s+(--version|-v)\\b", "comment": "Yarn version" },
    { "pattern": "^pnpm\\s+(--version|-v)\\b", "comment": "pnpm version" },
    { "pattern": "^bun\\s+(--version|-v)\\b", "comment": "Bun version" },
    { "pattern": "^python\\s+(--version|-V)\\b", "comment": "Python version" },
    { "pattern": "^python3\\s+(--version|-V)\\b", "comment": "Python 3 version" },
    { "pattern": "^ruby\\s+(--version|-v)\\b", "comment": "Ruby version" },
    { "pattern": "^go\\s+version\\b", "comment": "Go version" },
    { "pattern": "^rustc\\s+(--version|-V)\\b", "comment": "Rust compiler version" },
    { "pattern": "^cargo\\s+(--version|-V)\\b", "comment": "Cargo version" },
    { "pattern": "^java\\s+(-version|--version)\\b", "comment": "Java version" },
    { "pattern": "^dotnet\\s+--version\\b", "comment": ".NET version" },
    { "pattern": "^php\\s+(--version|-v)\\b", "comment": "PHP version" },
    { "pattern": "^perl\\s+(--version|-v)\\b", "comment": "Perl version" },

    { "pattern": "^man\\b", "comment": "Display manual pages" },
    { "pattern": "--help\\b", "comment": "Display command help" },
    { "pattern": "-h\\b$", "comment": "Display command help (short flag)" }
  ],

  "allowedMcpPatterns": [
    { "pattern": "search", "comment": "Search operations across MCP sources" },
    { "pattern": "list", "comment": "Generic list operations" },
    { "pattern": "get", "comment": "Generic get/read operations" },
    { "pattern": "read", "comment": "Generic read operations" }
  ],

  "allowedApiEndpoints": [],
  "allowedWritePaths": []
}
