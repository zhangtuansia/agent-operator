{
  "name": "agent-operator",
  "version": "0.1.0",
  "description": "Agent Operator - AI-powered agent interface",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "test": "bun test",
    "typecheck": "cd packages/shared && bun run tsc --noEmit",
    "typecheck:all": "cd packages/core && bun run tsc --noEmit && cd ../shared && bun run tsc --noEmit",
    "lint:electron": "cd apps/electron && bun run lint",
    "link": "bun link",
    "electron:clean": "rm -rf apps/electron/dist apps/electron/release",
    "electron:clean:win": "if exist apps\\electron\\dist rmdir /s /q apps\\electron\\dist && if exist apps\\electron\\release rmdir /s /q apps\\electron\\release",
    "electron:clean:vite": "rm -rf apps/electron/node_modules/.vite",
    "electron:clean:vite:win": "if exist apps\\electron\\node_modules\\.vite rmdir /s /q apps\\electron\\node_modules\\.vite",
    "electron:build:main": "source .env 2>/dev/null || true; esbuild apps/electron/src/main/index.ts --bundle --platform=node --format=cjs --outfile=apps/electron/dist/main.cjs --external:electron --define:process.env.GOOGLE_OAUTH_CLIENT_ID=\\\"${GOOGLE_OAUTH_CLIENT_ID:-}\\\" --define:process.env.GOOGLE_OAUTH_CLIENT_SECRET=\\\"${GOOGLE_OAUTH_CLIENT_SECRET:-}\\\" --define:process.env.SLACK_OAUTH_CLIENT_ID=\\\"${SLACK_OAUTH_CLIENT_ID:-}\\\" --define:process.env.SLACK_OAUTH_CLIENT_SECRET=\\\"${SLACK_OAUTH_CLIENT_SECRET:-}\\\" --define:process.env.MICROSOFT_OAUTH_CLIENT_ID=\\\"${MICROSOFT_OAUTH_CLIENT_ID:-}\\\"",
    "electron:build:main:win": "esbuild apps/electron/src/main/index.ts --bundle --platform=node --format=cjs --outfile=apps/electron/dist/main.cjs --external:electron",
    "electron:build:preload": "esbuild apps/electron/src/preload/index.ts --bundle --platform=node --format=cjs --outfile=apps/electron/dist/preload.cjs --external:electron",
    "electron:build:renderer": "rm -rf apps/electron/dist/renderer && vite build --config apps/electron/vite.config.ts",
    "electron:build:renderer:win": "if exist apps\\electron\\dist\\renderer rmdir /s /q apps\\electron\\dist\\renderer && vite build --config apps/electron/vite.config.ts",
    "electron:build:resources": "cp -r apps/electron/resources apps/electron/dist/",
    "electron:build:resources:win": "xcopy apps\\electron\\resources apps\\electron\\dist\\resources /E /I /Y",
    "electron:build": "bun run electron:build:main && bun run electron:build:preload && bun run electron:build:renderer && bun run electron:build:resources",
    "electron:build:win": "bun run electron:build:main:win && bun run electron:build:preload && bun run electron:build:renderer:win && bun run electron:build:resources:win",
    "electron:start": "bun run electron:build && electron apps/electron",
    "electron:start:win": "bun run electron:build:win && electron apps/electron",
    "electron:dev": "source scripts/detect-instance.sh && bun run electron:clean:vite && bun run electron:build:resources && bun run electron:dev:logs & concurrently -k \"bun run electron:dev:vite\" \"bun run electron:dev:main\" \"bun run electron:dev:preload\" \"bun run electron:dev:electron\"",
    "electron:dev:win": "bun run electron:clean:vite:win && bun run electron:build:resources:win && concurrently -k \"bun run electron:dev:vite\" \"bun run electron:dev:main:win\" \"bun run electron:dev:preload\" \"bun run electron:dev:electron:win\"",
    "electron:dev:menu": "bash scripts/electron-dev.sh",
    "electron:dev:logs": "pgrep -f 'tail -f.*Craft Agents/main.log' > /dev/null || osascript -e \"tell application \\\"Terminal\\\" to do script \\\"$PWD/scripts/tail-electron-logs.sh\\\"\"",
    "sync-secrets": "bash scripts/sync-secrets.sh",
    "fresh-start": "bun run scripts/fresh-start.ts",
    "electron:dev:vite": "vite dev --config apps/electron/vite.config.ts --port ${CRAFT_VITE_PORT:-5173}",
    "electron:dev:main": "source .env 2>/dev/null || true; esbuild apps/electron/src/main/index.ts --bundle --platform=node --format=cjs --outfile=apps/electron/dist/main.cjs --external:electron --define:process.env.GOOGLE_OAUTH_CLIENT_ID=\\\"${GOOGLE_OAUTH_CLIENT_ID:-}\\\" --define:process.env.GOOGLE_OAUTH_CLIENT_SECRET=\\\"${GOOGLE_OAUTH_CLIENT_SECRET:-}\\\" --define:process.env.SLACK_OAUTH_CLIENT_ID=\\\"${SLACK_OAUTH_CLIENT_ID:-}\\\" --define:process.env.SLACK_OAUTH_CLIENT_SECRET=\\\"${SLACK_OAUTH_CLIENT_SECRET:-}\\\" --define:process.env.MICROSOFT_OAUTH_CLIENT_ID=\\\"${MICROSOFT_OAUTH_CLIENT_ID:-}\\\" --define:process.env.MICROSOFT_OAUTH_CLIENT_SECRET=\\\"${MICROSOFT_OAUTH_CLIENT_SECRET:-}\\\" --watch",
    "electron:dev:main:win": "esbuild apps/electron/src/main/index.ts --bundle --platform=node --format=cjs --outfile=apps/electron/dist/main.cjs --external:electron --watch",
    "electron:dev:preload": "esbuild apps/electron/src/preload/index.ts --bundle --platform=node --format=cjs --outfile=apps/electron/dist/preload.cjs --external:electron --watch",
    "electron:dev:electron": "sleep 2 && VITE_DEV_SERVER_URL=http://localhost:${CRAFT_VITE_PORT:-5173} CRAFT_CONFIG_DIR=${CRAFT_CONFIG_DIR:-} CRAFT_APP_NAME=\"${CRAFT_APP_NAME:-Craft Agents}\" CRAFT_DEEPLINK_SCHEME=${CRAFT_DEEPLINK_SCHEME:-craftagents} CRAFT_INSTANCE_NUMBER=${CRAFT_INSTANCE_NUMBER:-} electron apps/electron",
    "electron:dev:electron:win": "powershell -Command \"Start-Sleep -Seconds 2; $env:VITE_DEV_SERVER_URL='http://localhost:5173'; electron apps/electron\"",
    "electron:dist": "bun run electron:build && electron-builder --config electron-builder.yml --project apps/electron",
    "electron:dist:mac": "bun run electron:build && electron-builder --config electron-builder.yml --project apps/electron --mac",
    "electron:dist:win": "bun run electron:build:win && electron-builder --config electron-builder.yml --project apps/electron --win",
    "electron:dist:linux": "bun run electron:build && electron-builder --config electron-builder.yml --project apps/electron --linux",
    "viewer:dev": "lsof -ti:5174 | xargs kill -9 2>/dev/null; vite dev --config apps/viewer/vite.config.ts --open /s/tz5-13I84pwK_he",
    "viewer:build": "vite build --config apps/viewer/vite.config.ts",
    "viewer:preview": "vite preview --config apps/viewer/vite.config.ts",
    "marketing:dev": "vite dev --config apps/marketing/vite.config.ts",
    "marketing:build": "vite build --config apps/marketing/vite.config.ts",
    "marketing:preview": "vite preview --config apps/marketing/vite.config.ts"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.947.0",
    "@electron/packager": "^19.0.1",
    "@rollup/rollup-win32-arm64-msvc": "^4.55.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9",
    "@types/linkify-it": "^5.0.0",
    "@types/node": "^25.0.8",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/semver": "^7.7.1",
    "@types/shell-quote": "^1.7.5",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.5.6",
    "react-devtools-core": "^6.1.1",
    "tailwindcss": "^4.1.18",
    "tar": "^7.5.2",
    "typescript": "^5.0.0",
    "vite": "^6.2.4"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.12",
    "@anthropic-ai/sdk": "^0.71.1",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@shikijs/cli": "^3.19.0",
    "@tailwindcss/typography": "^0.5.19",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "jotai": "^2.16.0",
    "js-yaml": "^4.1.1",
    "linkify-it": "^5.0.0",
    "lucide-react": "^0.561.0",
    "marked": "^17.0.1",
    "markitdown-js": "^0.0.14",
    "open": "^11.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^3.0.6",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "semver": "^7.7.3",
    "shiki": "^3.19.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.0.0"
  }
}
